.recommendItem:after, .recommendItem:before {
  right: 100%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
}

.recommendItem:after {
  border-right-color: recBackColor;
  //border-width: 16px;
  top: 26px;
  //margin-top: -26px;
  border-top: 10px solid transparent;
  border-right: 16px solid recBackColor;
  border-bottom: 10px solid transparent;
}

