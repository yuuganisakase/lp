debugBorder()
  border solid 1px rgba(0,0,0,0)

itemBorder()
  border-top solid 1px #cfcfcf
  border-bottom solid 1px #cfcfcf
  border-right solid 1px #cfcfcf
  border-left none

borderradius(n)
  -webkit-border-radius n
  border-radius n
